		"@types/multer": "^1.4.12",
		"@types/node": "^22.9.0",
		"@types/nodemailer": "^6.4.19",
		"@types/uuid": "^10.0.0",
		"nodemon": "^3.1.10",
		"prisma": "^6.18.0",
