# ğŸš€ SERVER CONFIGURATION
PORT=8080
NODE_ENV=development

# ğŸ—„ï¸ DATABASE CONFIGURATION
# PostgreSQL 18 connection string - REQUIRED for server startup
DATABASE_URL=postgresql://postgres:password@localhost:5432/figure_db?schema=public

# Quick Start Examples (choose one that matches your setup):
# Local PostgreSQL 18: postgresql://postgres:password@localhost:5432/figure_db?schema=public
# With custom user: postgresql://myuser:mypass@localhost:5432/figure_db?schema=public
# Supabase: postgresql://user:pass@db.supabase.co:5432/postgres?schema=public
# Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech:5432/neondb?schema=public

# PostgreSQL 18 Advanced Configuration (Optional)
# For production with connection pooling (recommended for Vercel/serverless):
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=10&pool_timeout=20&sslmode=require

# Security Note: PostgreSQL 18 deprecates MD5 authentication. Use SCRAM-SHA-256 instead.
# Configure your PostgreSQL server with: password_encryption = 'scram-sha-256'

# ğŸ”‘ JWT AUTHENTICATION SECRETS - REQUIRED for security
# Generate secure random strings using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

ACCESS_TOKEN_SECRET=YOUR_ACCESS_TOKEN_SECRET_HERE
ACCESS_TOKEN_EXPIRY=1d

REFRESH_TOKEN_SECRET=YOUR_REFRESH_TOKEN_SECRET_HERE
REFRESH_TOKEN_EXPIRY=30d

# ğŸ“§ EMAIL CONFIGURATION - OPTIONAL (for order confirmations, password reset)
EMAIL_USER=YOUR_EMAIL_ADDRESS
EMAIL_PASS=YOUR_APP_PASSWORD

# ğŸ”¥ FIREBASE CONFIGURATION - OPTIONAL (if using Firebase services)
# Option 1: Environment variables (recommended for production)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project.iam.gserviceaccount.com

# Option 2: Service account file path (for development)
# FIREBASE_SERVICE_ACCOUNT_PATH=src/config/firebase/serviceAccountKey.json

